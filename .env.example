# =============================================================================
# LurkBot Environment Variables Example
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Gateway Configuration
# -----------------------------------------------------------------------------
LURKBOT_GATEWAY_HOST=0.0.0.0
LURKBOT_GATEWAY_PORT=18789

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
# Docker image to use
LURKBOT_IMAGE=lurkbot:latest

# Configuration directory (contains .env, bootstrap files, sessions)
LURKBOT_CONFIG_DIR=~/.lurkbot

# Workspace directory for file operations
LURKBOT_WORKSPACE_DIR=./workspace

# -----------------------------------------------------------------------------
# AI Provider API Keys
# -----------------------------------------------------------------------------
# Anthropic (Claude)
LURKBOT_ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI (GPT)
LURKBOT_OPENAI_API_KEY=sk-...

# -----------------------------------------------------------------------------
# Chinese AI Providers (Optional)
# -----------------------------------------------------------------------------
# DeepSeek
DEEPSEEK_API_KEY=sk-...

# Alibaba Qwen (通义千问)
QWEN_API_KEY=sk-...

# Moonshot Kimi
KIMI_API_KEY=sk-...

# Zhipu AI (智谱清言)
ZHIPU_API_KEY=...

# Baidu Wenxin (文心一言)
BAIDU_API_KEY=...
BAIDU_SECRET_KEY=...

# ByteDance Doubao (豆包)
DOUBAO_API_KEY=...

# -----------------------------------------------------------------------------
# Messaging Channels - International
# -----------------------------------------------------------------------------
# Telegram Bot
LURKBOT_TELEGRAM_BOT_TOKEN=123456789:ABC...
LURKBOT_TELEGRAM_ENABLED=true

# Discord Bot
LURKBOT_DISCORD_BOT_TOKEN=...
LURKBOT_DISCORD_ENABLED=false

# Slack Bot
LURKBOT_SLACK_BOT_TOKEN=xoxb-...
LURKBOT_SLACK_SIGNING_SECRET=...
LURKBOT_SLACK_ENABLED=false

# -----------------------------------------------------------------------------
# Messaging Channels - Chinese Ecosystem
# -----------------------------------------------------------------------------
# WeChat Work (企业微信)
LURKBOT_WECHAT_APP_ID=...
LURKBOT_WECHAT_APP_SECRET=...
LURKBOT_WECHAT_TOKEN=...
LURKBOT_WECHAT_AES_KEY=...
LURKBOT_WECHAT_ENABLED=false

# DingTalk (钉钉)
LURKBOT_DINGTALK_APP_KEY=...
LURKBOT_DINGTALK_APP_SECRET=...
LURKBOT_DINGTALK_ROBOT_CODE=...
LURKBOT_DINGTALK_ENABLED=false

# Feishu/Lark (飞书)
LURKBOT_FEISHU_APP_ID=...
LURKBOT_FEISHU_APP_SECRET=...
LURKBOT_FEISHU_VERIFICATION_TOKEN=...
LURKBOT_FEISHU_ENCRYPT_KEY=...
LURKBOT_FEISHU_ENABLED=false

# -----------------------------------------------------------------------------
# Multi-Tenant Configuration
# -----------------------------------------------------------------------------
# Default tenant ID
LURKBOT_TENANT_ID=default

# Tenant isolation mode (strict/shared)
LURKBOT_TENANT_ISOLATION=strict

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Gateway authentication token (optional)
LURKBOT_GATEWAY_TOKEN=

# Enable sandbox isolation for tool execution
LURKBOT_SANDBOX_ENABLED=true

# Allowed domains for web requests
LURKBOT_ALLOWED_DOMAINS=*

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LURKBOT_LOG_LEVEL=INFO

# Log format (json, text)
LURKBOT_LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# Maximum concurrent requests
LURKBOT_MAX_CONCURRENT_REQUESTS=100

# Request timeout in seconds
LURKBOT_REQUEST_TIMEOUT=300

# Cache TTL in seconds
LURKBOT_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Database Configuration (Optional)
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/lurkbot

# Redis connection string (for caching)
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Monitoring Configuration (Optional)
# -----------------------------------------------------------------------------
# Prometheus metrics port
# LURKBOT_METRICS_PORT=9090

# Enable tracing
# LURKBOT_TRACING_ENABLED=false

# Jaeger endpoint
# JAEGER_ENDPOINT=http://localhost:14268/api/traces
